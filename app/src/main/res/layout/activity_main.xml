<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btLigar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Ligar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btDesligar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Desligar"
        app:layout_constraintEnd_toEndOf="@+id/btLigar"
        app:layout_constraintStart_toStartOf="@+id/btLigar"
        app:layout_constraintTop_toBottomOf="@+id/btLigar" />

    <EditText
        android:id="@+id/etIP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Informe o ip do PICO"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btLigar"
        app:layout_constraintEnd_toEndOf="@+id/btLigar"
        app:layout_constraintStart_toStartOf="@+id/btLigar" />
</androidx.constraintlayout.widget.ConstraintLayout>